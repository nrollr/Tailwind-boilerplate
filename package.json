{
  "name": "tailwind-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate based on TailwindCSS",
  "main": "",
  "scripts": {
    "css:global": "npx tailwindcss -i ./build/global.css -o ./public/assets/css/style.css --watch --minify",
    "css:project": "npx tailwindcss -i ./build/project.css -o ./public/project/assets/css/style.css --watch --minify",
    "build:serve": "browser-sync start --server './public' --files './public'"
  },
  "keywords": [],
  "author": "Nicolas Rollier",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "browser-sync": "^2.29.3",
    "clean-css": "^5.3.2",
    "clean-css-cli": "^5.6.2",
    "tailwindcss": "^3.3.2"
  }
}
{
  "name": "tailwind-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for frontend development based on TailwindCSS",
  "main": "",
  "scripts": {
    "build:css": "postcss build/assets/css/tailwind.css -o public/assets/css/style.css",
    "build:serve": "browser-sync start --server './public' --files './public'",
    "prod:purge": "NODE_ENV=production postcss build/assets/css/tailwind.css -o public/assets/css/style.css",
    "prod:minify": "cleancss -o public/assets/css/style.min.css public/assets/css/style.css"
  },
  "keywords": [],
  "author": "Nicolas Rollier",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.3.0",
    "@tailwindcss/forms": "^0.3.4",
    "@tailwindcss/typography": "^0.4.1",
    "autoprefixer": "^10.3.7",
    "clean-css": "^5.2.1",
    "clean-css-cli": "^5.4.1",
    "postcss": "^8.3.9",
    "postcss-cli": "^9.0.1",
    "tailwindcss": "^2.2.16"
  },
  "devDependencies": {
    "browser-sync": "^2.27.5"
  }
}

{
  "name": "tailwind-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for frontend development based on TailwindCSS",
  "main": "",
  "scripts": {
    "build:css": "npx tailwindcss -i ./build/tailwind.css -o ./public/assets/css/style.css --watch",
    "build:minify": "cleancss -o public/assets/css/style.min.css public/assets/css/style.css --watch",
    "build:serve": "browser-sync start --server './public' --files './public'",
    "build:run": "npm-run-all --parallel build:css build:minify build:serve"
  },
  "keywords": [],
  "author": "Nicolas Rollier",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/typography": "^0.5.2",
    "browser-sync": "^2.27.10",
    "clean-css": "^5.3.0",
    "clean-css-cli": "^5.6.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.0.24"
  }
}
